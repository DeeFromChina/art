   public String getMaxWorksNo(int artistId) throws ServiceException {
      try {
         String str = "SELECT max(works_no) as maxNo FROM ART_WORKS where artist_id =" + artistId;
         List<Map<String, Object>> list = jdbcDao.queryBySql(str);
         if (list != null && list.size() > 0) {
            Map<String, Object> map = list.get(0);
            String maxNo = map.get("maxNo") == null ? null : map.get("maxNo").toString();
            if (maxNo != null && !"".equals(maxNo)) {
               Integer noInt = Integer.valueOf(maxNo.substring(1)) + 1;
               String rsNo = "";
               Integer len = 8 - noInt.toString().length();
               if (len > 0) {
                  for (int i = 8 - len; i < 8; i++) {
                     rsNo += "0";
                  }
               }
               rsNo += noInt;
               return "W" + rsNo;
            }
         }
         ArtArtist artArtist = artArtistService.getArtArtist(artistId);
         String tmp = artArtist.getEname().substring(0, 1).toUpperCase();
         return tmp + "00000001";
      }
      catch (Exception e) {
         e.printStackTrace();
         throw new ServiceException("系统错误。");
      }
   }

