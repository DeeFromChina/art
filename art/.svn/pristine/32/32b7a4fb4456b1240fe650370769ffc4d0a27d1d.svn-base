<sqls>
  <sql id="artArtistList" orderBy="aa.ID">
  	SELECT aa.ID AS id,
  	C_NAME AS cName,
  	E_NAME AS eName,
  	BIRTHDATE AS birthdate,
  	NATIONALITY AS nationality,
  	BIRTHPLACE AS birthplace,
  	C_RESUME AS cResume,
  	E_RESUME AS eResume,
  	PHOTO AS photo,
  	ARTIST_TYPE AS artistType,
  	PERSONAL_PAGE AS personalPage,
  	NHOM AS nhom,
  	ZODIAC AS zodiac,
  	ANCESTRAL_HOME AS ancestralHome,
  	SEX AS sex 
  	FROM ART_ARTIST aa 
  	{#paras}
